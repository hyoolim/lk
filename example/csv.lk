Enumerable/do {
    /to csv := {
        /map { line |
            line/map { item ---
                item/find[',"\n'/to character set; 0]/nil? ?? item :: {
                    '"' ++ item/replace['"'; '""'] ++ '"'
                }
            } ->join[',']
        } ->join['\n']
    }
}
[ ['this "is a" test'; 'yeah!'; 'baby']
  ['line2'; 'line3\n with a lf in it.'; 'blah'] ]/to csv/println
