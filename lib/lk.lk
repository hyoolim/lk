# List < Sequence
List/extend {
    /'<=>' := { to |
        d := to/size - /size
        d > 0 ? to ! /. ->each { i, v |
            d := v <=> to(i)
            d != 0 ? return(d)
        }
        d
    }

    # Returns true if each item in the list is equal to the ones in
    # to argument, using != operator for comparison, false otherwise.
    /'==' := { to |
        to/size - /size != 0 ? return(False)
        /each { i, v | v != to(i) ? return(False) }
        True
    }
    /flatten := { args... | /clone/flatten!(*args) }
    /flatten! := { ... }
    /join := { | /join('') }
    /join += { delim |
        /size < 1 ? return('')
        /rest/reduce(/first/clone) { a, v | (a ++= delim) ++= v }
    }
    /toCode := { | '(' ++ (/map { x | x/toCode } ->join('; ')) ++ ')' }
    /toList := { | /clone }
}

# Map
Map/extend {

    # Returns true if there are any items in the set, false otherwise.
    /toBoolean := { | /size != 0 }
}

# N (nil) < Boolean
Nil/extend {
    /nil? := True
    /toBoolean := False
    /toCode := { | /toString }
    /toString := 'Nil'
}

# Number
Number/extend {

    # Returns the absolute value of the number.
    /finite? := True
    /inf? := False
    /succ := { | /. + 1 }
    /toBoolean := { | /. != 0 }
    /toCode := { | /toString }
    /toNumber := { | /. }
    /toString += { | /integer? ? /toString(0, 0) ! /toString(0, 6) }
    /also(Comparable)
}

# Object
Object/extend {
    /'!' := { | /not? }
    /'@' := { | /toList }
    /'$' := { | /toString }
    /'-' := { | /negate }
    /'+' := { | /toNumber }
    /'+' += { other | /clone() += other }

    # Returns other if the receiver evaluates
    # to true or false otherwise.
    /'&&' := { other | /toBoolean ? other ! False }
    /'==' := { to | /.id == to/.id }
    /in? := { list | list/has?(/.) }

    # Default init function that never does anything.
    /init! := { | }
    /'~=' := /.retrieve('==')
    /'?' := { args... | /toBoolean/'?'(*args) }
    /'!=' := { to | /. == to ->not? }
    /new := { args... | new := /alloc; new/init!(*args); new }
    /nil? := False
    /'||' := { other | /toBoolean ? /. ! other }
    /'|||' := { other | /nil? ? other ! /. }
    /'-' += { other | /clone() -= other }
    /to := { to | Range/new(/., to) }
    /toBoolean := True
    /toCode := { | '<<' ++ /toString ++ '>>' }
    /toString := { | /.CLASS ++ '#' ++ /.id/toString }
}

# Random

# Range
Range/extend {
    /each := { block |
        rv := /from
        block/minimum_argument_size <= 1 ? {
            while((rv <=> /to) <= 0) {
                block(rv)
                rv = rv/succ
            }
        } ! {
            i := 0
            while((i <=> /to) <= 0) {
                block(i, rv)
                rv = rv/succ
                i = i + 1
            }
        }
    }
    /init! := { /from, /to | }
    /toCode := { | /from/toCode ++ '/to(' ++ /to/toCode ++ ')' }
    /also(Enumerable)
}

