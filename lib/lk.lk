# F (false) < Boolean
False/extend {

    # Never does anything.
    /'?' := { ifTrue | }

    # Always calls ifFalse argument.
    /'?' += { ifTrue, ifFalse | ifFalse() }
    /not? := True
    /toString := 'False'
}

