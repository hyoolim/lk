Tester := Object/new/do {
    /init := { /name --- /index := 0 }
    /finish := { ---
        /name/to string ++ ': Ran ' ++ /index/to string ++
        ' test(s) successfully' ->println
    }
    /test := { name; actual; expected ---
        /index += 1
        actual != expected ? {
            raise[/name/to string ++ ": '" ++ name/to string ++
            "' test failed: " ++ 'expected ' ++ expected/to code ++
            ' but got ' ++ actual/to code]
        }
    }
}
