Tester := Object/new/do {
    /init := { /name --- /index := 0 }
    /finish := { ---
        /name/toString ++ ': Ran ' ++ /index/toString ++
        ' test(s) successfully' ->println
    }
    /test := { name; actual; expected ---
        /index += 1
        actual != expected ? {
            raise[/name/toString ++ ": '" ++ name/toString ++
            "' test failed: " ++ 'expected ' ++ expected/toCode ++
            ' but got ' ++ actual/toCode]
        }
    }
}
